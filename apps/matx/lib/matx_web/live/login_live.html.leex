<header>
      <!--Nav-->
      <nav class="bottom-0 md:bottom-auto md:bg-white p-2 mt-0 fixed w-full max-w-full z-10 pin-t shadow-md px-10">
        <div class="container mx-auto flex flex-wrap justify-between max-w-full">
          <div class="flex w-full md:w-1/2 justify-center md:justify-start text-white font-extrabold">
            <div id="wrapper">
              <button phx-click="home" class="text-white no-underline hover:text-white hover:no-underline my-super-cool-btn">
                <span>
                    <img unselectable="on" draggable="false" style="user-select: none; pointer-events: none" class="h-12 w-auto sm:h-12" src="/images/cutlery.svg" alt="MatX Logo" />
                </span>
              </button>
            </div>
          </div>
        </div>
      </nav>
</header>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div>
      <h2 class="mt-6 text-center text-3xl leading-9 font-extrabold text-gray-900">
        Logga in på ditt konto
      </h2>
      <p class="mt-2 text-center text-sm leading-5 text-gray-600">
        Eller
        <button phx-click="register" class="font-medium text-red-500 hover:text-red-700 focus:outline-none focus:underline transition ease-in-out duration-150">
          registrera ett nytt
        </button>
      </p>
    </div>
    <%= f = form_for :session, "#", [phx_submit: "post", multipart: true] %>
      <input type="hidden" name="remember" value="true" />
      <%= if @error do %>
        <div class="rounded-md shadow-sm">
          <%= @error %>
        </div>
      <% end %>
      <div class="mt-4 rounded-md shadow-sm">
        <div>
          <%= error_tag f, :email %>
          <%= text_input f, :email, placeholder: "Email address", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
        </div>
        <div class="-mt-px">
          <%= error_tag f, :password %>
          <%= text_input f, :password, [placeholder: "Lösenord", name: "password", type: "password", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5"] %>
        </div>
      </div>

      <div class="mt-6 flex items-center justify-between">
        <div class="flex items-center">
          <input id="remember_me" type="checkbox" class="form-checkbox h-4 w-4 text-red-600 transition duration-150 ease-in-out" />
          <label for="remember_me" class="ml-2 block text-sm leading-5 text-gray-900">
            Spara email
          </label>
        </div>

        <div class="text-sm leading-5">
          <a href="#" class="font-medium text-red-400 hover:text-red-500 focus:outline-none focus:underline transition ease-in-out duration-150">
            Glömt lösenordet
          </a>
        </div>
      </div>

      <div class="mt-6 relative">
        <%= submit "Logga in", [class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-red-400 hover:bg-red-500 focus:outline-none focus:border-red-500 focus:shadow-outline-red active:bg-red-500 transition duration-150 ease-in-out"] %>
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <svg class=" shadow-inner shadow-2xl h-5 w-5 text-red-500 group-hover:text-red-400 transition ease-in-out duration-150 " fill="white" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </span>
        </button>
      </div>
    </form>
  </div>
</div>